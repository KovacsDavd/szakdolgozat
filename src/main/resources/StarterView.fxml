<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #3498db;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.sudoku.controller.StarterController">
    <children>
        <VBox alignment="CENTER" layoutX="200.0" layoutY="50.0" spacing="20.0">
            <Text style="-fx-font-size: 24px; -fx-fill: white;" text="Sudoku Game" />
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Button mnemonicParsing="false" onAction="#showChooseLevelScene" style="-fx-font-size: 16px;" text="New Game" />
                <Button mnemonicParsing="false" style="-fx-font-size: 16px;" text="Load last game" />
                <Button mnemonicParsing="false" style="-fx-font-size: 16px;" text="Statistics" />
                <Button mnemonicParsing="false" style="-fx-font-size: 16px;" text="Exit" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
